<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skill Details</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Link to your CSS -->
</head>
<body>
    <h1><%= skill.name %></h1>
    <p><%= skill.description %></p>
    <p><strong>Created At:</strong> <%= skill.created_at.toDateString() %></p>

    <a href="/skills/<%= skill._id %>/edit">Edit</a>

    <form action="/skills/<%= skill._id %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this skill?');">Delete</button>
    </form>

    <a href="/">Go Back</a>

    <hr>

    <!-- Video Section -->
    <h2>Videos</h2>
    <% if (skill.videos && skill.videos.length > 0) { %>
        <ul>
            <% skill.videos.forEach((video, index) => { %>
                <li>
                    <h3><%= video.title %></h3>
                    <p><%= video.description %></p>
                    <iframe width="560" height="315" src="<%= video.url %>" frameborder="0" allowfullscreen></iframe>
                    <!-- Delete Video Button -->
                    <form action="/skills/<%= skill.id %>/videos/<%= video.id %>?_method=DELETE" method="POST">
                        <button type="submit">Delete Video</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No videos added yet.</p>
    <% } %>

    <!-- Add New Video Form -->
    <h2>Add New Video</h2>
    <form action="/skills/<%= skill._id %>/videos" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
        <br>
        <br>
        <label for="url">Video URL:</label>
        <input type="text" id="url" name="url" required>
        <br>
        <br>
        <label for="description">Description:</label>
        <textarea id="description" name="description"></textarea>
        <br>
        <br>
        <button type="submit">Add Video</button>
    </form>

</body>
</html>
